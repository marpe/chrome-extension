{
  "manifest_version": 3,
  "name": "Reading time",
  "version": "1.0",
  "description": "Add the reading time to Chrome Extension documentation articles",
  "icons": {
    "128": "images/icon-128.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "devtools_page": "devtools.html",
  "content_scripts": [
    {
      "js": ["content.js"],
      "matches": ["<all_urls>"]
    }
  ],
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },
  "action": {
    "default_icon": "icon.png",
    "default_title": "Stylize",
    "default_popup": "popup.html"
  },
  "permissions": [
    "scripting",
    "storage",
    "activeTab",
    "contextMenus",
    "fontSettings",
    "userScripts"
  ],
  "host_permissions": ["<all_urls>"],
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Ctrl+B"
      }
    }
  }
}
