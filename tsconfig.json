{
  "compilerOptions": {
    "outDir": "dist",
    "target": "es2020",
    "module": "esnext",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "types": ["chrome-types"],
    "lib": ["esnext", "dom", "dom.iterable"],
    "inlineSourceMap": true,
    "inlineSources": true
  },
  "include": [
    "src/**/*",
  ]
}
