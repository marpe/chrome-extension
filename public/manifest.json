{
  "manifest_version": 3,
  "name": "marpes Stylizr",
  "version": "1.1",
  "minimum_chrome_version": "120",
  "description": "Add custom CSS or JavaScript to execute to any website",
  "icons": {
    "128": "images/icon.png"
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "devtools_page": "devtools/devtools/index.html",
  "options_ui": {
    "page": "index.html",
    "open_in_tab": true
  },
  "action": {
    "default_icon": {
      "16": "images/icon.png",
      "24": "images/icon.png",
      "32": "images/icon.png"
    },
    "default_title": "Stylize",
    "default_popup": "popup/popup/index.html"
  },
  "permissions": [
    "debugger",
    "scripting",
    "storage",
    "activeTab",
    "contextMenus",
    "fontSettings",
    "userScripts",
    "webNavigation"
  ],
  "host_permissions": [
    "http://*/*",
    "https://*/*"
  ],
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Ctrl+B"
      }
    },
    "open-options": {
      "suggested_key": {
        "default": "Ctrl+Shift+V"
      },
      "description": "Open options page"
    },
    "connect-websocket": {
      "suggested_key": {
        "default": "Ctrl+Shift+P"
      },
      "description": "Connect to WebSocket"
    },
    "reload-extension": {
      "suggested_key": {
        "default": "Ctrl+Shift+B"
      },
      "description": "Reload the extension"
    }
  }
}
