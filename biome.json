{
	"$schema": "https://biomejs.dev/schemas/1.8.3/schema.json",
	"organizeImports": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"style": {
				"noUnusedTemplateLiteral": "off",
				"noNonNullAssertion": "off"
			}
		}
	},
	"files": {
		"ignore": [
			"node_modules",
			".dist",
			".git",
			".vscode",
			".output",
			".wxt",
			".idea",
			"typed-router.d.ts",
			"components.d.ts"
		]
	}
}
